{
  "name": "@posprint/editor",
  "version": "0.0.5",
  "private": true,
  "homepage": ".",
  "main": "build/electron/main.js",
  "build": {
    "appId": "org.posprint.editor",
    "productName": "POS Print Editor",
    "artifactName": "posprint-editor-${version}.${ext}",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "nsis": {
      "shortcutName": "${productName}"
    },
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "compression": "maximum",
    "directories": {
      "buildResources": "assets"
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:9009 && tsc -p electron -w\" \"wait-on http://localhost:9009 && tsc -p electron && electron .\"",
    "electron:build": "npm run build && tsc -p electron && electron-builder",
    "start": "PORT=9009 react-app-rewired start",
    "build": "react-app-rewired build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "usb": "^1.6.3"
  },
  "devDependencies": {
    "@blueprintjs/core": "^3.35.0",
    "@blueprintjs/select": "^3.14.3",
    "@monaco-editor/react": "^3.6.3",
    "@posprint/command-builder": "0.0.11",
    "@posprint/previewer-react": "0.0.11",
    "@posprint/template": "0.0.3",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/node": "^12.19.3",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-resize-detector": "^5.0.0",
    "concurrently": "^5.3.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^1.2.0",
    "electron-reload": "^1.5.0",
    "electron-window-state": "^5.0.3",
    "fontsource-jetbrains-mono": "^3.0.5",
    "ip-regex": "^4.2.0",
    "monaco-editor": "^0.20.0",
    "node-sass": "^4.14.1",
    "react": "^16.14.0",
    "react-app-rewired": "^2.1.8",
    "react-dom": "^16.14.0",
    "react-resize-detector": "^5.2.0",
    "react-scripts": "4.0.0",
    "react-split": "^2.0.9",
    "typescript": "^4.0.5",
    "@types/usb": "^1.5.2",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.3.4",
    "wait-on": "^5.2.0",
    "web-vitals": "^0.2.4"
  }
}
